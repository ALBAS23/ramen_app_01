<%=render 'shared/header' %>

<section class="container post-table">
  <div class="post-show-section post-group">
    <h1><a href="#" style="display: inline-block; color: black;"><%=@post.user.nickname%>さん</a>の投稿</h1>
    <% if @post.user.id == current_user.id %>
      <%= link_to '編集', edit_post_path(@post), class: "post-btn post-btn-edit" %>
      <%= link_to '削除', post_path(@post), method: :delete, class: "post-btn" %>
    <% end %>
  </div>

  <article class="post-show">
    <h2><%=@post.word%></h2>
    <div class="table-container table-show-container">
      <div class="l-post l-post-show">
        <a href="#">
          <% if @post.image.attached? %>
            <div class="post-picture post-show-picture"><%= image_tag @post.image %></div>
          <% else %>
            <div class="post-picture post-show-picture"></div>
          <% end %>
         <ul class="post-items">
              <li>
                <p class="post-category">メニュー：</p>
                <p class="post-category-value"><%=@post.menu%></p>
              </li>
              <li>
                <p class="post-category">店名：
                <p class="post-category-value"><%=@post.store%></p>
              </li>
              <li>
                <p class="post-category">値段：
                <p class="post-category-value"> ¥ <%=@post.price%></p>
              </li>
              <li>
                <p class="post-category">ジャンル：
                <p class="post-category-value"><%=@post.genre.name%></p>
              </li>
              <li>
                <p class="post-category">ひとコト：
                <p id="word" class="post-category-value"><%=@post.word%></p>
              </li>
            </ul>
        </a>
      </div>
    </div>
  </article>
</section>