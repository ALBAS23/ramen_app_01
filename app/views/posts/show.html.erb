<%=render 'shared/header' %>

<section class="container post-table">
  <div class="post-show-section post-group">
    <h1><a href="#" style="display: inline-block; color: black;"><%=@post.user.nickname%>さん</a>の投稿</h1>
    <%= link_to '編集', edit_post_path(@post), class: "post-btn post-btn-edit" %>
    <%= link_to '削除', post_path(@post), method: :delete, class: "post-btn" %>
  </div>

  <article class="post-show">
    <h2><%=@post.word%></h2>
    <div class="table-container table-show-container">
      <div class="l-post l-post-show">
        <a href="#">
          <% if @post.image.attached? %>
            <div class="post-picture post-show-picture"><%= image_tag @post.image %></div>
          <% else %>
            <div class="post-picture post-show-picture"></div>
          <% end %>
          <ul class="post-items post-show-items">
            <li>メニュー：<span><%=@post.menu%></span></li>
            <li>店名：<span><%=@post.store%><span></li>
            <li>値段：<span> ¥ <%=@post.price%></span></li>
            <li>ジャンル：<span><%=@post.genre.name%></span></li>
          </ul>
        </a>
      </div>
    </div>
  </article>
</section>