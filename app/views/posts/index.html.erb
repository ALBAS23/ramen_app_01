<%= render 'shared/header' %>

<section class="picture-section">
  <img src="/images/ラーメン画像２.jpg">
</section>

<section class="container post-table">
  <div class="post-group">
    <h1>投稿一覧</h1>
    <%= link_to '新規投稿', new_post_path, class: "post-btn" %>
  </div>
  <article>
    <h2>最新投稿順</h2>
    <div class="table-container">
      <% @posts_created_at.each do |post| %>
        <%= render partial: 'posts/index_posts', locals: { post: post } %>
      <% end %>
    </div>
  </article>
  <article>
    <h2>値段順</h2>
    <div class="table-container">
      <% @posts_price.each do |post| %>
        <%= render partial: 'posts/index_posts', locals: { post: post } %>
      <% end %>
    </div>
  </article>
</section>