<header class="header-wrapper">
  <%= link_to root_path, class: "header-left" do %>
    <i class="fa fa-home main-icon-size"></i>ラーメンセレクション
  <% end %>
  <div class="header-right">
    <nav class="session-group">
      <p><%= current_user.nickname %>さん</p>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-sign-out main-icon-size"></i>ログアウト
      <% end %>
      <%= link_to "/person/#{current_user.id}" do %>
        <i class="fa fa-child main-icon-size"></i>マイページ
      <% end %>
    </nav>
  </div>
</header>