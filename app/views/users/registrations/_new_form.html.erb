<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
  <%= render "users/shared/error_messages", resource: resource %>
        
  <div class="form-box">
    <h5>ニックネーム<span class="caution mandatory">必須</span></h5>
    <%= f.text_field :nickname, autofocus: true, placeholder: "半角英数字で入力してください" %>
  </div>
  <div class="form-box">
    <h5>メールアドレス<span class="caution mandatory">必須</span></h5>
    <%= f.email_field :email %>
  </div>
  <div class="form-box">
    <h5>パスワード<span class="caution mandatory">必須</h5>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字８文字以上で入力してください" %>
  </div>
  <div class="form-box">
    <h5>パスワード確認用<span class="caution mandatory">必須</span></h5>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください" %>
  </div>
  <div class="form-submit">
    <%= f.submit "新規登録" %>
  </div>

<% end %>